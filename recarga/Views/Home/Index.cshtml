@model recarga.Models.ModeloDadosDaRecarga

<div class="content">
    <div class="module">
        <div class="module-head">
            <h3>Recarga</h3>
        </div>
        <div class="module-body">
            <form asp-action="Index" method="post" class="form-horizontal row-fluid">

                <div class="control-group">
                    <label class="control-label" asp-for="Operadora">Operadora</label>
                    <div class="controls">
                        <select class="form-dropdown" onchange="AlterarCor(this.value)" asp-for="Operadora" asp-items="Html.GetEnumSelectList<recarga.Models.Operadoras>()"></select>
                        <span asp-validation-for="Operadora" class="text-danger"></span>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" asp-for="DDD">DDD</label>
                    <div class="controls">
                        <input asp-for="DDD" type="text" id="basicinput" placeholder="ddd" class="span8">
                        <span asp-validation-for="DDD" class="text-danger"></span>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" asp-for="Numero">Número</label>
                    <div class="controls">
                        <input asp-for="Numero" type="text" id="basicinput" placeholder="número" class="span8">
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>
                </div>


                <div class="control-group">
                    <label class="control-label" asp-for="Valor">Valor</label>
                    <div class="controls">
                        <select asp-for="Valor">
                            <option value="12">12,00</option>
                            <option value="25">25,00</option>
                            <option value="35">35,00</option>
                            <option value="50">50,00</option>
                        </select>
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" asp-for="Forma_Pgto">Forma de pagamento</label>
                    <div class="controls">
                        <select class="form-dropdown" asp-for="Forma_Pgto" asp-items="Html.GetEnumSelectList<recarga.Models.FormaDePagamento>()"></select>
                        <span asp-validation-for="Forma_Pgto" class="text-danger"></span>
                    </div>
                </div>

                <br />
                <br />


                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn">Recarregar</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<br />
<br />
<br />

<div class="module">

    <div class="module-body table">
        <table cellpadding="0" cellspacing="0" border="0" class="datatable-1 table table-bordered table-striped display" width="100%">
            <thead>
                <tr>
                    <th>Operadora</th>
                    <th>DDD</th>
                    <th>Numero</th>
                    <th>Valor</th>
                    <th>Forma de pagamento</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.ListaDeRecargas)
                {
                    <tr>
                        @if ((int)item.Operadora == 1)
                        {
                            <td><span style="color:red">OI</span></td>
                        }
                        else if ((int)item.Operadora == 2)
                        {
                            <td><span style="color:blue">TIM</span></td>
                        }
                        else if ((int)item.Operadora == 3)
                        {
                            <td><span style="color:orange">CLARO</span></td>
                        }
                        else if ((int)item.Operadora == 4)
                        {
                            <td><span style="color:green">VIVO</span></td>
                        }
                        else
                        {
                            <td><span style="color:blue">NEXTEL</span></td>
                        }

                        <td>@item.DDD</td>
                        <td>@item.Numero</td>

                        @{
                            decimal valorDecimal = Convert.ToDecimal(item.Valor);

                            <td>@valorDecimal.ToString("C")</td>
                        }

                        @if ((int)item.Forma_Pgto == 1)
                        {
                            <td><span style="color:red">DEBITO</span></td>
                        }
                        else if ((int)item.Operadora == 2)
                        {
                            <td><span style="color:green">CREDITO</span></td>
                        }
                        else
                        {
                            <td><span style="color:blue">DINHEIRO</span></td>
                        }

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>